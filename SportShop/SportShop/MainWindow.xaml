<Window x:Class="SportShop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportShop"
        mc:Ignorable="d"
        Icon=" icon.ico"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,2,0">
        <TextBox HorizontalAlignment="Left" Margin="225,16,0,0" TextWrapping="Wrap" Text="Спортивные товары" VerticalAlignment="Top" Width="415" FontFamily="Comic Sans MS" FontSize="42" TextAlignment="Center" TextChanged="TextBox_TextChanged" Foreground="#FF349C3D" Height="61" BorderBrush="White"/>
