            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="1.058"/>
                    <RotateTransform Angle="-2759.81"/>
                    <TranslateTransform X="31.691" Y="-7.984"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Button Content="Корзина" HorizontalAlignment="Left" Margin="31,16,0,0" VerticalAlignment="Top" Width="100" Height="72" BorderBrush="#FF92D050" Background="White" FontFamily="Comic Sans MS" FontSize="22" Padding="1" BorderThickness="4" Foreground="#FF349C3D"/>
        <Image Margin="659,16,31,322" Source="CHEL.png" Stretch="Fill"/>

    </Grid>
</Window>
